<%= javascript_include_tag "colors", "data-turbo-track": "reload", defer: true %>
<div class="flex-1">
  <% breadcrumb :favorites_colors, current_user %>
  <%= tag.div(id: "colorLength", class: %w(container mx-auto mt-8 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 bg-white), data: { colorLength: @colors.length }.to_json) do %>
    <% if @colors.present? %>
      <%= render @colors %>
    <% else %>
      <p><%= t(".no_result") %></p>
    <% end %>
  <% end %>
</div>