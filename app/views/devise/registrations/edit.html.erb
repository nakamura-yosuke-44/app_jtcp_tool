<div class="flex-grow flex flex-col items-center justify-center">
  <div class="text-2xl font-bold">
    <%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col justify-center">
      <div class="field mb-2">
        <div>
          <%= f.label :email %>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-[#0d0015] pl-2 w-full" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-2 bg-yellow-500"><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>
    
      <div class="field mb-2">
        <div>
          <%= f.label :password do %> 
            <%= t('devise.defaults.password') %>
            <%= t('.characters_minimum', count: @minimum_password_length) %>
            â€»<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "border border-[#0d0015] pl-2 w-full" %>
      </div>
    
      <div class="field mb-2">
        <div>
          <%= f.label :password_confirmation %>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-[#0d0015] pl-2 w-full" %>
      </div>
    
      <div class="field mb-2">
        <div>
          <%= f.label :current_password do %>
            <%= t('.current_password') %>
            (<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)
          <% end %>
        </div>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "border border-[#0d0015] pl-2 w-full" %>
      </div>

      <div class="text-center">
        <div class="actions btn btn-xs bg-[#00a3af]">
          <%= f.submit t('.update') %>
        </div>
      </div>
    </div>
  <% end %>
  <span class="mt-4">
    <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { turbo_confirm: t('.are_you_sure') , turbo_method: :delete } %> 
  </span>
  <span class="mt-4">
    <%= link_to t('devise.shared.links.back'), :back %>
  </span>
</div>