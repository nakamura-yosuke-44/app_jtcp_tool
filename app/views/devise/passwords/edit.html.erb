<div class="flex-grow flex flex-col items-center justify-center">
  <div class="text-2xl font-bold">
    <%= t('.change_your_password') %>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="field mb-2 text-center">
      <div>
        <%= f.label :password, t('.new_password') %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.links.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
      </div>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "border border-[#0d0015] pl-2" %>
    </div>
  
    <div class="field mb-2 text-center">
      <div>
        <%= f.label :password_confirmation, t('.confirm_new_password') %>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-[#0d0015] pl-2" %>
    </div>
    
    <div class="text-center">
      <div class="actions btn btn-xs bg-[#00a3af]">
        <%= f.submit t('.change_my_password') %>
      </div>
    </div>
  <% end %>
</div>
