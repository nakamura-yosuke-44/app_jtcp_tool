<div class="flex-grow flex flex-col items-center justify-center">
  <div class="text-2xl font-bold">
    <%= t('.reset_password') %>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field mb-2 text-center">
      <%= f.label :email, t('.registered_email_address') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-[#0d0015] pl-2" %>
    </div>
  
    <div class="actions btn btn-xs bg-[#00a3af]">
      <%= f.submit t('.send_reset_password_link') %>
    </div>
  <% end %>
</div>

